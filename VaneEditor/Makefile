ifndef config
  config=dbg
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild prelink

ifeq ($(config),dbg)
  RESCOMP = windres
  TARGETDIR = ../build/dbg-linux-x64/VaneEditor
  TARGET = $(TARGETDIR)/VaneEditor
  OBJDIR = ../build-objs/dbg-linux-x64/VaneEditor
  DEFINES += -DDEBUG -D_DEBUG
  INCLUDES += -I../vendor/x64-linux/include -I../Vane -I../Vane/include
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++20
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += ../build/dbg-linux-x64/Vane/libVane.so -Wl,-Bstatic -lSDL2 -lSDL2main -Wl,-Bdynamic -limgui
  LDDEPS += ../build/dbg-linux-x64/Vane/libVane.so
  ALL_LDFLAGS += $(LDFLAGS) -L../vendor/x64-linux/lib -L/usr/lib64 -Wl,-rpath,'$$ORIGIN/../Vane' -m64
  LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
  endef
all: prebuild prelink $(TARGET)
	@:

endif

ifeq ($(config),rel)
  RESCOMP = windres
  TARGETDIR = ../build/rel-linux-x64/VaneEditor
  TARGET = $(TARGETDIR)/VaneEditor
  OBJDIR = ../build-objs/rel-linux-x64/VaneEditor
  DEFINES += -DRELEASE -DNDEBUG
  INCLUDES += -I../vendor/x64-linux/include -I../Vane -I../Vane/include
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -std=c++20
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += ../build/rel-linux-x64/Vane/libVane.so -Wl,-Bstatic -lSDL2 -lSDL2main -Wl,-Bdynamic -limgui
  LDDEPS += ../build/rel-linux-x64/Vane/libVane.so
  ALL_LDFLAGS += $(LDFLAGS) -L../vendor/x64-linux/lib -L/usr/lib64 -Wl,-rpath,'$$ORIGIN/../Vane' -m64 -s
  LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
  endef
all: prebuild prelink $(TARGET)
	@:

