{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-mingw",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-mingw-x64-dbg",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_DEFAULT_TRIPLET": "x64-windows-mingw",
        "VCPKG_INSTALL_OPTIONS": "--x-buildtrees-root=I:/btree",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-msvc",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-msvc-x64-dbg",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_DEFAULT_TRIPLET": "x64-windows",
        "VCPKG_INSTALL_OPTIONS": "--x-buildtrees-root=I:/btree",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-mingw",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-mingw-x64-dbg",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_DEFAULT_TRIPLET": "x64-linux",
        "VCPKG_INSTALL_OPTIONS": "--x-buildtrees-root=$env{HOME}/dev/btree",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ]
}
